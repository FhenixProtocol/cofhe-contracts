{
  "name": "fhenix-hardhat-example",
  "version": "1.0.0",
  "description": "An example repository to get you started with Fhenix development",
  "scripts": {
    "test": "hardhat test",
    "test:localfhenix": "hardhat test --network localfhenix",
    "clean": "rimraf ./artifacts ./cache ./coverage ./types ./coverage.json ./deployments/localfhenix ./ignition/deployments ./.openzeppelin/* ./deterministic-task-manager-hardhat",
    "compile": "hardhat compile",
    "copy-taskmanager": "cp deployments/localfhenix/TaskManager.json ../copro-aggregator/TaskManager.json",
    "clone-deterministic": "git clone --depth 1 git@github.com:FhenixProtocol/deterministic-task-manager-hardhat.git && cd deterministic-task-manager-hardhat && cp .env.example .env && pnpm install",
    "deploy-deterministic": "cd ./deterministic-task-manager-hardhat/ && pnpm hardhat deploy",
    "deploy:contracts": "pnpm clean && hardhat deploy && pnpm copy-taskmanager",
    "task:deploy": "hardhat deploy",
    "task:add": "hardhat task:doAdd",
    "task:upgradeTM": "hardhat task:upgradeTM",
    "task:random": "hardhat task:doRandom",
    "task:addn": "hardhat task:doAddNonTrivial",
    "task:decrypt": "hardhat task:doDecrypt",
    "task:deployExample": "hardhat task:deployExample",
    "localfhenix:start": "hardhat localfhenix:start",
    "localfhenix:stop": "hardhat localfhenix:stop",
    "deploy:sepolia": "hardhat deploy --network sepolia",
    "faucet": "hardhat task:fhenix:usefaucet"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fhenixprotocol/fhenix-hardhat-example.git"
  },
  "author": "Fhenix",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fhenixprotocol/fhenix-hardhat-example/issues"
  },
  "homepage": "https://github.com/fhenixprotocol/fhenix-hardhat-example#readme",
  "devDependencies": {
    "@fhenixprotocol/cofhe-contracts": "0.0.13",
    "@fhenixprotocol/contracts": "0.2.1",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.10",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.13",
    "@openzeppelin/contracts": "^5.2.0",
    "@openzeppelin/contracts-upgradeable": "^5.2.0",
    "@openzeppelin/hardhat-upgrades": "^3.9.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.24",
    "axios": "^1.8.2",
    "chai": "^4.5.0",
    "chalk": "^4.1.2",
    "dotenv": "^16.4.7",
    "ethers": "^6.13.5",
    "fhenix-hardhat-docker": "0.2.2",
    "fhenix-hardhat-network": "0.2.3-alpha.0",
    "fhenix-hardhat-plugin": "0.2.2-alpha.0",
    "hardhat": "^2.22.19",
    "hardhat-deploy": "^0.11.45",
    "hardhat-gas-reporter": "^1.0.10",
    "mocha": "^10.8.2",
    "rimraf": "^5.0.10",
    "solidity-coverage": "^0.8.14",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.8.2"
  },
  "packageManager": "pnpm@9.12.1+sha512.e5a7e52a4183a02d5931057f7a0dbff9d5e9ce3161e33fa68ae392125b79282a8a8a470a51dfc8a0ed86221442eb2fb57019b0990ed24fab519bf0e1bc5ccfc4"
}
